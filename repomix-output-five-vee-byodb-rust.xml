            fn drop(&mut self) {
                for b in [self.range.0, self.range.1] {
                    match b {
                        std::ops::Bound::Included(b) => {
                            drop(unsafe { Box::from_raw(b.as_ptr() as *mut u8) });
                        }
                        std::ops::Bound::Excluded(b) => {
